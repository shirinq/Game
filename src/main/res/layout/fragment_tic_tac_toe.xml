<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".Fragments.TicTacToeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:text="@string/TicTacToe_fragment"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/Winner_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="30sp" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="3">
        <Button
            android:id="@+id/btn0_0"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn0_1"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn0_2"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn1_0"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn1_1"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn1_2"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/btn2_0"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn2_1"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn2_2"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </GridLayout>


</FrameLayout>